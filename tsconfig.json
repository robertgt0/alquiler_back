{
  "compilerOptions": {
    /* === Salida y estructura === */
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,                 // No generar .d.ts para evitar ruido
    "removeComments": true,

    /* === Módulos y compatibilidad === */
    "target": "ES2022",                   // Mejor rendimiento y soporte moderno
    "module": "NodeNext",                 // Recomendado para Node 18+ / 20+
    "moduleResolution": "NodeNext",       // Compatible con imports ESM/CommonJS
    "lib": ["ES2022", "DOM"],             // DOM opcional por si usas fetch u otras APIs

    /* === Comportamiento del compilador === */
    "noEmit": false,
    "noEmitOnError": false,
    "strict": false,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,

    /* === Imports === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* === Alias === */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["modules/teamsys/controllers/*"],
      "@services/*": ["modules/teamsys/services/*"],
      "@models/*": ["modules/teamsys/models/*"],
      "@utils/*": ["utils/*"]
    },

    /* === Nueva opción para desarrolladores === */
    //"allowImportingTsExtensions": true,   // Útil con moduleResolution NodeNext
    "noUncheckedIndexedAccess": false,    // Puedes activarlo para aún más seguridad
    "incremental": true                   // Compilación incremental más rápida
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts","src/modules/DevCode", "src/modules/nombre_grupo_ejemplo"]
}
