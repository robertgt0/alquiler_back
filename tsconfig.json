{
  "compilerOptions": {
    /* === Salida y estructura === */
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    /* === Módulos y compatibilidad === */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],

    /* === Comportamiento del compilador === */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === Imports === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* === Alias === */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["modules/*/controllers/*"],
      "@services/*": ["modules/*/services/*"],
      "@models/*": ["models/*", "modules/*/models/*"],
      "@utils/*": ["utils/*"]
    },

    /* === Nueva opción para desarrolladores === */
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": false,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
