{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],

    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["modules/DevCode/controllers/*"],
      "@services/*": ["modules/DevCode/services/*"],
      "@models/*": ["modules/DevCode/models/*"]
    }
  },
  "include": ["src/**/*", "modules/**/*"],
  "exclude": ["node_modules", "dist"]
}
