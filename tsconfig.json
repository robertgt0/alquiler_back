{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],

    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["modules/DevCode/controllers/*"],
      "@services/*": ["modules/DevCode/services/*"],
      "@models/*": ["modules/DevCode/models/*"]
    },

    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
