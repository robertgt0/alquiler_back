{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["modules/DevCode/controllers/*"],
      "@services/*": ["modules/DevCode/services/*"],
      "@models/*": ["modules/DevCode/models/*"],
      "@utils/*": ["utils/*"]
    }
  },

  "include": [
    "src/index.ts",
    "src/modules/DevCode/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "src/testsNotification",
    "src/modules/notification_Gmail",
    "src/modules/notification_WhatsApp",
    "**/*.test.ts"
  ]
}
