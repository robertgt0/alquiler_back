{
  "//": "tsconfig-schema:ignore",
  "compilerOptions": {
    /* === Salida y estructura === */
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    /* === MÃ³dulos y compatibilidad === */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],

    /* === Comportamiento del compilador === */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === Imports === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* === Alias - VERSIÃ“N ACTUALIZADA === */
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@modules/*": ["./src/modules/*"],
      "@controllers/*": ["./src/modules/*"],
      "@services/*": ["./src/modules/*"],
      "@models/*": ["./src/models/*", "./src/modules/*"],
      "@utils/*": ["./src/utils/*"]
    },

    /* === Nueva opciÃ³n para desarrolladores === */
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": false,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/modules/nombre_grupo_ejemplo/**",
    "src/utils/**" // ðŸ‘ˆ CORRECCIÃ“N: AÃ±adido para ignorar el seeder en el build
  ]
}