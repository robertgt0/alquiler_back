{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],

      /* üëá alias espec√≠ficos para TU estructura */
      "@teamsys/*": ["modules/teamsys/*"],
      "@teamsys/models/*": ["modules/teamsys/models/*"],
      "@teamsys/controllers/*": ["modules/teamsys/controllers/*"],
      "@teamsys/services/*": ["modules/teamsys/services/*"],
      "@teamsys/routes/*": ["modules/teamsys/routes/*"],
      "@teamsys/middlewares/*": ["modules/teamsys/middlewares/*"],
      "@teamsys/utils/*": ["modules/teamsys/utils/*"]
    },

    /* ‚ùå quitar: rompe build con emit */
    // "allowImportingTsExtensions": true,

    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
