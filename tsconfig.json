{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noEmitOnError": false,

    "forceConsistentCasingInFileNames": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",

    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["modules/DevCode/controllers/*"],
      "@services/*": ["modules/DevCode/services/*"],
      "@models/*": ["modules/DevCode/models/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*", "modules/**/*"],
  "exclude": ["node_modules", "dist"]
}
