{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": [
    "src/index.ts",
    "src/config/**/*.ts",
    "src/modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/models/User.ts",
    "src/routes/userRoutes.ts",
    "src/controllers/**",
    "src/modules/**/tests/**"
  ]
}

