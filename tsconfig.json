{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": false,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["modules/DevCode/controllers/*"],
      "@services/*": ["modules/DevCode/services/*"],
      "@models/*": ["modules/DevCode/models/*"],
      "@utils/*": ["utils/*"]
    },
    "allowImportingTsExtensions": false,
    "noUncheckedIndexedAccess": false,
    "incremental": true
  },

  "include": [
    "src/index.ts",
    "src/modules/**/*.ts",
    "src/config/**/*.ts",
    "src/utils/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "src/modules/DevCode",
    "src/modules/DevCode/**/*",
    "src/modules/notification_WhatsApp",
    "src/modules/notification_WhatsApp/**/*",
    "**/*.test.ts"
  ]
}
